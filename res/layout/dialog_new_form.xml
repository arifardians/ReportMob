<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/dialog_new_form_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@color/headerColor" >

        <TextView
            android:id="@+id/form_preview_form_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/add_form"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>

    <EditText
        android:id="@+id/dialog_add_new_form_input"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_new_form_header"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_border"
        android:ems="10"
        android:hint="@string/form_name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/dialog_add_new_form_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/dialog_add_new_form_input"
        android:layout_alignRight="@+id/dialog_add_new_form_input"
        android:layout_below="@+id/dialog_add_new_form_input"
        android:background="@drawable/rect_border"
        android:ems="10"
        android:hint="@string/form_description"
        android:inputType="text" />

</RelativeLayout>
