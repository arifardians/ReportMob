<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/form_radio_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="@string/field"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    
      <TextView
          android:id="@+id/form_radio_text_required"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_marginTop="14dp"
          android:layout_toRightOf="@+id/form_radio_label"
          android:text="@string/sign_required"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@android:color/holo_red_dark"
          android:visibility="gone" />
    
    <Button
        android:id="@+id/form_radio_button_delete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/form_radio_label"
        android:background="@drawable/button_flat_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:drawableTop="@drawable/ic_action_discard" />

    <Button
        android:id="@+id/form_radio_button_edit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/form_radio_button_delete"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/form_radio_button_delete"
        android:background="@drawable/button_flat_selector"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/ic_action_edit"
        android:minHeight="20dp"
        android:minWidth="20dp" />
    
    <Button
        android:id="@+id/form_radio_button_down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/form_radio_button_delete"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/form_radio_button_edit"
        android:background="@drawable/button_flat_selector"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/ic_action_expand"
        android:minHeight="20dp"
        android:minWidth="20dp" />
    
    <Button
        android:id="@+id/form_radio_button_up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/form_radio_button_delete"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/form_radio_button_down"
        android:background="@drawable/button_flat_selector"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/ic_action_collapse"
        android:minHeight="20dp"
        android:minWidth="20dp" />

    <RadioGroup
        android:id="@+id/form_radio_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/form_radio_label"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

    </RadioGroup>

</RelativeLayout>
